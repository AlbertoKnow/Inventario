# ===================================
# CONFIGURACIÓN DEL SISTEMA DE INVENTARIO UTP
# ===================================
# Copia este archivo a .env y configura las variables según tu entorno

# ===================================
# DJANGO CORE
# ===================================

# SECRET_KEY: Clave secreta para Django (REQUERIDO)
# Genera una nueva con: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-secret-key-here-CHANGE-THIS

# DEBUG: Modo de depuración (False en producción)
DEBUG=False

# ALLOWED_HOSTS: Dominios permitidos separados por coma
ALLOWED_HOSTS=localhost,127.0.0.1,inventario.albertoknow.com

# ===================================
# BASE DE DATOS
# ===================================

# PostgreSQL (Producción)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=inventario_db
DB_USER=inventario_user
DB_PASSWORD=your-db-password-here
DB_HOST=localhost
DB_PORT=5432

# SQLite (Desarrollo) - Comenta las variables anteriores y descomenta esta
# DB_ENGINE=django.db.backends.sqlite3
# DB_NAME=db.sqlite3

# ===================================
# SEGURIDAD
# ===================================

# CSRF: Orígenes confiables (separados por coma)
CSRF_TRUSTED_ORIGINS=https://inventario.albertoknow.com

# SSL/HTTPS (True en producción con HTTPS)
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# HSTS (Activar solo después de verificar HTTPS)
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False

# ===================================
# ARCHIVOS ESTÁTICOS Y MEDIA
# ===================================

# Rutas para archivos estáticos (producción)
STATIC_ROOT=/var/www/inventario/staticfiles
MEDIA_ROOT=/var/www/inventario/media

# URLs públicas
STATIC_URL=/static/
MEDIA_URL=/media/

# ===================================
# EMAIL (Opcional - para notificaciones)
# ===================================

# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
