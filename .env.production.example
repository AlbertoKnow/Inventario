# ==============================================================================
# CONFIGURACIÓN DE PRODUCCIÓN - INVENTARIO UTP
# ==============================================================================
# Copiar este archivo como .env en el servidor y completar los valores

# ------------------------------------------------------------------------------
# DJANGO CORE
# ------------------------------------------------------------------------------
# Generar con: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=tu-clave-secreta-muy-larga-y-segura-aqui

# NUNCA poner True en producción
DEBUG=False

# Dominios/IPs permitidos (separados por coma, sin espacios)
ALLOWED_HOSTS=tu-dominio.com,www.tu-dominio.com,IP_DEL_SERVIDOR

# ------------------------------------------------------------------------------
# BASE DE DATOS POSTGRESQL
# ------------------------------------------------------------------------------
DATABASE_URL=postgres://usuario:password@localhost:5432/inventario_db

# O configuración separada:
DB_NAME=inventario_db
DB_USER=inventario_user
DB_PASSWORD=tu_password_seguro
DB_HOST=localhost
DB_PORT=5432

# ------------------------------------------------------------------------------
# SEGURIDAD
# ------------------------------------------------------------------------------
# Forzar HTTPS (poner True cuando tengas SSL configurado)
SECURE_SSL_REDIRECT=False
CSRF_TRUSTED_ORIGINS=https://tu-dominio.com,https://www.tu-dominio.com

# ------------------------------------------------------------------------------
# EMAIL (opcional - para recuperación de contraseñas)
# ------------------------------------------------------------------------------
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=tu_correo@gmail.com
EMAIL_HOST_PASSWORD=tu_app_password

# ------------------------------------------------------------------------------
# OTROS
# ------------------------------------------------------------------------------
# Zona horaria (America/Lima para Perú)
TIME_ZONE=America/Lima
